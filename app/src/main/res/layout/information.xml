<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/text1"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFCC"
        android:padding="10dp"
        android:text="버전 정보"
        android:textColor="#000000"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wifi_png"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:src="@drawable/wifi_png"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/wifi_png"
        android:text="현재 버전 v1.0"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="@+id/text3"
        app:layout_constraintTop_toTopOf="@+id/wifi_png" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_marginBottom="-1dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/wifi_png"
        android:text="최신 버전 v1.1"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/wifi_png"
        app:layout_constraintLeft_toRightOf="@+id/wifi_png" />


    <TextView
        android:id="@+id/text4"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_below="@id/wifi_png"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="64dp"
        android:background="#FFFF99"
        android:padding="10dp"
        android:text="만든이"
        android:textColor="#000000"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wifi_png" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="126dp"
        android:layout_height="26dp"
        android:layout_below="@id/text4"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="박혜진, 이주홍, 한지훈"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text4" />

</android.support.constraint.ConstraintLayout>